{
  "name": "crazy-md",
  "version": "1.0.0",
  "description": "A modern WhatsApp bot using Baileys and TypeScript",
  "main": "dist/crazy.js",  // Pointage vers le fichier principal compilé
  "types": "dist/crazy.d.ts",  // Types définis dans le dossier dist
  "scripts": {
    "build": "tsc",  // Compile le projet TypeScript
    "start": "node dist/crazy.js",  // Pointage vers le fichier principal compilé
    "dev": "tsc --watch",  // Mode développement
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "test": "jest",
    "prepare": "husky install"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "baileys",
    "typescript"
  ],
  "author": "CrazyPrince",
  "license": "MIT",
  "engines": {
    "node": "^20.0.0"
  },
  "dependencies": {
    "@whiskeysockets/baileys": "github:CrazyPrince/baileys",
    "@hapi/boom": "^9.1.4",
    "node-cache": "^5.1.2",
    "open": "^9.0.0",
    "readline-sync": "^1.4.10",
    "libphonenumber-js": "^1.10.15",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.4.0",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "eslint": "^8.47.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.1.0",
    "husky": "^8.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format"
    }
  }
}